    <!-- 5) QUALITY FORM INSTANCE VIEWS -->
    <record id="view_quality_form_instance_tree" model="ir.ui.view">
        <field name="name">quality.form.instance.tree</field>
        <field name="model">quality.form.instance</field>
        <field name="arch" type="xml">
            <tree string="Revisiones por Propiedad">
                <field name="name"/>
                <field name="form_template_id"/>
                <field name="property_id"/>
            </tree>
        </field>
    </record>

    <record id="view_quality_form_instance_form" model="ir.ui.view">
        <field name="name">quality.form.instance.form</field>
        <field name="model">quality.form.instance</field>
        <field name="arch" type="xml">
            <form string="Instancia de Formulario de Calidad">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="borrador,en_proceso,en_revision,realizado,cancelado" statusbar_status="borrador"/>

                    <button name="action_en_proceso" type="object" string="En proceso" states="borrador" class="oe_highlight"/>

                    <button name="action_en_revision" type="object" string="Enviar para Revisión" states="en_proceso" class="oe_highlight"/>

                    <button name="action_realizado" type="object" string="Realizado" states="en_revision" class="oe_highlight"/>

                    <button name="action_cancelar" type="object" string="Cancelar" states="borrador,en_proceso,en_revision" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="allow_multiple_properties" invisible="1"/>
                        <field name="form_template_id" options="{'no_create': True}"/>
                        <field name="property_id" options="{'no_create': True}" attrs="{'invisible': [('allow_multiple_properties', '=', True)]}"/>
                        <field name="property_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible': [('allow_multiple_properties', '=', False)]}"/>

                    </group>
                    <notebook>
                        <page string="Detalle de Revisión">
                            <field name="response_ids" attrs="{'invisible': [('property_id', '=', False)]}">
                                <tree editable="bottom" string="Detalle de Revisión" create="false" delete="false">
                                    <field name="question_id" invisible="1"/>
                                    <field name="question_text" readonly="1"/>
                                    <field name="answer_text"/>
                                    <field name="answer_number"/>
                                    <field name="answer_boolean"/>
                                    <field name="answer_date"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 6) QUALITY FORM INSTANCE ACTION -->
    <record id="action_quality_form_instance" model="ir.actions.act_window">
