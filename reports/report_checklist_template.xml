<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_checklist_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="doc">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <h3 style="margin: 0;">
                            <span t-field="doc.name"/>
                        </h3>
                    </div>
                    <div style="text-align: right;">
                        <p style="margin: 0;">
                        <span t-field="doc.state"/>
                        </p>
                        <p style="margin: 0;">Junio 2024</p>
                    </div>
                </div>
                <hr/>
                <table style="width: 100%; margin-bottom: 20px;">
                    <tr>
                        <td style="width: 100px;"><strong>Proyecto</strong></td>
                        <td>
                            <span t-esc="doc.property_id.name"/>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Apartamento</strong></td>
                        <td>
                            <!-- If you store apartment info in your model, reference it here -->
                            <span t-esc="doc.property_id"/>
                        </td>
                    </tr>
                </table>

                <!-- Main Checklist Table -->
                <table class="table table-sm o_main_table" style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr style="border-bottom: 1px solid #000;">
                            <th style="padding: 4px;">Check</th>
                            <th style="padding: 4px;">Actividad</th>
                            <th style="padding: 4px;">Observaciones</th>
                            <th style="padding: 4px;">Revisado por</th>
                            <th style="padding: 4px;">Validado por</th>
                            <th style="padding: 4px;">Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Example of two static rows; adapt to your logic or loop through doc.response_ids -->
                        <tr>
                            <!-- A simple checkbox box -->
                            <td style="padding: 6px;">
                                <div style="width: 14px; height: 14px; border: 1px solid #000;"></div>
                            </td>
                            <td style="padding: 6px;">Correcta terminación de masilla</td>
                            <td style="padding: 6px;"></td>
                            <td style="padding: 6px;"></td>
                            <td style="padding: 6px;"></td>
                            <td style="padding: 6px;"></td>
                        </tr>
                        <tr>
                            <td style="padding: 6px;">
                                <div style="width: 14px; height: 14px; border: 1px solid #000;"></div>
                            </td>
                            <td style="padding: 6px;">Correcta terminación de pintura</td>
                            <td style="padding: 6px;"></td>
                            <td style="padding: 6px;"></td>
                            <td style="padding: 6px;"></td>
                            <td style="padding: 6px;"></td>
                        </tr>
                        <!-- End static rows -->
                    </tbody>
                </table>

                <!-- Optional Logo or Footer -->
                <div style="text-align: right; margin-top: 20px;">
                </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
