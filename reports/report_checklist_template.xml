<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_checklist_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    .table {
                    margin-bottom: 0px;
                    }
                    .personal-data-container {
                    display: flex;
                    flex-direction: column;
                    gap: 0.5rem;
                    width: 100%;
                    justify-content: center;
                    border-radius: 5px;
                    padding: 0.5rem;
                    margin-bottom: 1rem;
                    }
                    .date-axel {
                    width: 100%;
                    text-align: right;
                    margin-bottom: 1rem;
                    }
                    .title-acel {
                    width: 100%;
                    text-align: center;
                    margin-bottom: 1rem;
                    margin-top: 1rem;
                    background-color: gray;
                    color: white;
                    }
                    .unit-data-container {
                    display: flex;
                    flex-direction: column;
                    flex-wrap: nowrap;
                    gap: 0.5rem;
                    width: 100%;
                    justify-content: center;
                    padding: 0.5rem;
                    margin-bottom: 1rem;
                    }
                    .unit-data-item {
                    display: flex;
                    flex-direction: column;
                    gap: 0.5rem;
                    width: 100%;
                    justify-content: center;
                    align-items: baseline;
                    text-align: left;
                    }
                    td.title-table {
                    font-weight: bold;
                    text-align: left;
                    }
                    td {
                    text-align: left;
                    width: auto;
                    }
                    .date-inv {
                    text-align: left;
                    }
                    .custom-inv-table {
                    width: 100%;
                    margin-top: 2rem;
                    }
                    thead {
                    background-color: #f5f5f5;
                    }
                    .start-header {
                    text-align: left;
                    }
                    th {
                    text-align: left;
                    }

                    /* Table styles */
                    table.custom-inv-table {
                    border-collapse: separate !important;
                    border-spacing: 0 10px;
                    }
                    table.custom-inv-table td, table.custom-inv-table th {
                    border: none !important;
                    padding: 8px;
                    }
                    /* Narration row styles */
                    .cabnet {
                        border: 1px black solid;
                    }
                </style>
                <div class="page">
                    <t t-foreach="docs" t-as="doc">

                        <div class='date-axel'>
                            <span>
                                <t t-set="current_datetime" t-value="datetime.datetime.now()" />
                                <t t-esc="current_datetime.strftime('%Y-%m-%d %I:%M:%S %p')" />
                            </span>
                        </div>
                        <div class='title-acel'>
                            <span>
                                <strong>
                                    <span t-field="doc.name"/>
                                </strong>
                            </span>
                        </div>

                        <div>
                            <div>
                                <p>
                                    <strong>Proyecto: </strong>
                                    <span> Civiltower Oceance</span>
                                </p>
                            </div>
                            <div>
                                <p>
                                    <strong>Apartamento: </strong>
                                    <span t-esc="doc.property_id.name"/>
                                </p>
                            </div>
                            <div>
                                <p>
                                    <strong>Estado de encuesta: </strong>
                                    <span t-esc="doc.state"/>
                                </p>
                            </div>
                            <div>
                                <p>
                                    <t t-if="doc.revision_user_id">
                                    <p>
                                    <strong>Aprobado por:</strong>
                                    <t t-esc="doc.revision_user_id.name" />
                                    </p>
                                    </t>
                                    <t t-else="">Pendiente de aprobaci√≥n</t>
                                </p>
                            </div>
                        </div>

                        <hr/>

                        <!-- Main Checklist Table -->
                        <table class="table table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Actividad</th>
                                    <th scope="col">Notas</th>
                                    <th scope="col">Aprobado</th>
                                    <th scope="col">Valor</th>
                                    <th scope="col">Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.response_ids" t-as="line">
                                    <tr>
                                        <th>
                                            <t t-esc="line.question_text" />
                                        </th>
                                        <td>
                                            <t t-esc="line.answer_text" />
                                        </td>
                                        <th>
                                            <input type="checkbox" t-att-checked="line.answer_boolean and 'checked' or ''" disabled="disabled"/>
                                        </th>
                                        <td>
                                            <t t-esc="line.answer_number" />
                                        </td>
                                        <td>
                                            <t t-esc="line.answer_date" />
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Optional Logo or Footer -->
                        <div style="text-align: right; margin-top: 20px;">
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
